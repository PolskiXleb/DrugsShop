@using DrugsShop.Models
@model CartFinal
@{
    ViewBag.Title = "GetCart";
}

<h2>GetCart</h2>
<table>
    <tr>
        <th>
            Название
        </th>
        <th>
            Количество
        </th>
        <th>
            Цена
        </th>
        <th>
            Сумма
        </th>
        <th>
            Рецепт
        </th>

    </tr>
    @{
        foreach (CartProduct cart in Model.Cart)
        {
            <tr>
                <td>@cart.Name</td>
                <td>@cart.Amount</td>
                <td>@cart.Cost</td>
                <td>@cart.Sum</td>
                <td>@cart.ByRecipe</td>
            </tr>
        }
    }
</table>

