{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })


    <p>

    
            Имя: @Html.EditorFor(model => model.FName, new { htmlAttributes = new { @class = "form-control" } })
